<div class="comments clearfix">
    <div class="comments_content">
        <p class="comments_name"><strong><%= comment.name %></strong></p>
        <p class="comments_body"><%= comment.body%></p>
        <p class="comments_title"><%= time_ago_in_words(comment.created_at) %> Ago</p>
        
    </div>
    <p><%= link_to 'Delete',[comment.post, comment],method: :delete, class: "button",data: {confirm: "Are you sure?"} %></p>
    
</div>